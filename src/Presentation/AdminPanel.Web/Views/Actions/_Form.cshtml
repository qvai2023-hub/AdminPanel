@model dynamic

<div class="row">
    <div class="col-md-6 mb-3">
        <label asp-for="NameAr" class="form-label">الاسم بالعربي <span class="text-danger">*</span></label>
        <input asp-for="NameAr" class="form-control" placeholder="مثال: عرض" />
        <span asp-validation-for="NameAr" class="text-danger"></span>
    </div>
    <div class="col-md-6 mb-3">
        <label asp-for="NameEn" class="form-label">الاسم بالإنجليزي <span class="text-danger">*</span></label>
        <input asp-for="NameEn" class="form-control" placeholder="Example: View" dir="ltr" />
        <span asp-validation-for="NameEn" class="text-danger"></span>
    </div>
</div>

<div class="row">
    <div class="col-md-6 mb-3">
        <label asp-for="Code" class="form-label">الكود <span class="text-danger">*</span></label>
        <input asp-for="Code" class="form-control" placeholder="مثال: view" dir="ltr" />
        <span asp-validation-for="Code" class="text-danger"></span>
        <small class="text-muted">كود فريد للإجراء (بالإنجليزية)</small>
    </div>
    <div class="col-md-6 mb-3">
        <label asp-for="DisplayOrder" class="form-label">الترتيب</label>
        <input asp-for="DisplayOrder" type="number" class="form-control" min="0" />
        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
    </div>
</div>

<div class="row">
    <div class="col-md-6 mb-3">
        <label asp-for="Icon" class="form-label">الأيقونة</label>
        <div class="input-group">
            <span class="input-group-text" id="iconPreview">
                <i class="bi bi-question-circle" id="iconDisplay"></i>
            </span>
            <input asp-for="Icon" class="form-control" placeholder="مثال: eye, pencil, trash" dir="ltr" id="iconInput" />
        </div>
        <span asp-validation-for="Icon" class="text-danger"></span>
        <small class="text-muted">
            اسم الأيقونة من <a href="https://icons.getbootstrap.com/" target="_blank">Bootstrap Icons</a> (بدون bi-)
        </small>
    </div>
    @if (ViewContext.RouteData.Values["action"]?.ToString() == "Edit")
    {
        <div class="col-md-6 mb-3">
            <label class="form-label d-block">الحالة</label>
            <div class="form-check form-switch mt-2">
                <input asp-for="IsActive" class="form-check-input" style="width: 50px; height: 25px;" />
                <label asp-for="IsActive" class="form-check-label">نشط</label>
            </div>
        </div>
    }
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        // Icon preview functionality
        document.getElementById('iconInput').addEventListener('input', function() {
            var iconName = this.value.trim();
            var iconDisplay = document.getElementById('iconDisplay');

            if (iconName) {
                iconDisplay.className = 'bi bi-' + iconName;
            } else {
                iconDisplay.className = 'bi bi-question-circle';
            }
        });

        // Trigger on page load if there's already an icon value
        var initialIcon = document.getElementById('iconInput').value;
        if (initialIcon) {
            document.getElementById('iconDisplay').className = 'bi bi-' + initialIcon;
        }
    </script>
}
