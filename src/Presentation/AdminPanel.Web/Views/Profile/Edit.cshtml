@model EditProfileViewModel
@{
    ViewData["Title"] = "تعديل الملف الشخصي";
}

<div class="mb-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">الرئيسية</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index")">الملف الشخصي</a></li>
            <li class="breadcrumb-item active">تعديل</li>
        </ol>
    </nav>
    <h2 class="mb-1"><i class="bi bi-pencil-square me-2"></i>تعديل الملف الشخصي</h2>
    <p class="text-muted">تحديث معلومات حسابك الشخصية</p>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm" style="border-radius: 15px;">
            <div class="card-body p-4">
                <form asp-action="Edit" method="post">
                    @Html.AntiForgeryToken()

                    <!-- Validation Summary -->
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <!-- Full Name -->
                    <div class="mb-4">
                        <label asp-for="FullName" class="form-label">
                            <i class="bi bi-person-badge me-1"></i>الاسم الكامل <span class="text-danger">*</span>
                        </label>
                        <input asp-for="FullName" class="form-control form-control-lg" placeholder="أدخل الاسم الكامل" />
                        <span asp-validation-for="FullName" class="text-danger small"></span>
                    </div>

                    <!-- Email -->
                    <div class="mb-4">
                        <label asp-for="Email" class="form-label">
                            <i class="bi bi-envelope me-1"></i>البريد الإلكتروني <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Email" class="form-control form-control-lg" type="email" placeholder="example@domain.com" dir="ltr" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <!-- Phone Number -->
                    <div class="mb-4">
                        <label asp-for="PhoneNumber" class="form-label">
                            <i class="bi bi-telephone me-1"></i>رقم الهاتف
                        </label>
                        <input asp-for="PhoneNumber" class="form-control form-control-lg" type="tel" placeholder="+966 5X XXX XXXX" dir="ltr" />
                        <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                        <div class="form-text">اختياري - أدخل رقم الهاتف مع رمز الدولة</div>
                    </div>

                    <!-- Info Alert -->
                    <div class="alert alert-info d-flex align-items-center mb-4" role="alert">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        <div>
                            لتغيير اسم المستخدم أو كلمة المرور، يرجى التواصل مع مسؤول النظام أو استخدام صفحة
                            <a href="@Url.Action("ChangePassword")">تغيير كلمة المرور</a>.
                        </div>
                    </div>

                    <!-- Buttons -->
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-check-lg me-2"></i>حفظ التغييرات
                        </button>
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary btn-lg">
                            <i class="bi bi-x-lg me-2"></i>إلغاء
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
