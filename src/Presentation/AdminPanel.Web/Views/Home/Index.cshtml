@model DashboardViewModel
@{
    ViewData["Title"] = "لوحة التحكم";
}

<div class="mb-4">
    <h2 class="mb-1"><i class="bi bi-speedometer2 me-2"></i>لوحة التحكم</h2>
    <p class="text-muted">مرحباً بك في لوحة التحكم</p>
</div>

<!-- Stats Cards -->
<div class="row g-4 mb-4">
    <div class="col-md-6 col-lg-3">
        <div class="card stat-card border-0">
            <div class="card-body d-flex align-items-center">
                <div class="stat-icon bg-primary bg-opacity-10 text-primary me-3">
                    <i class="bi bi-people"></i>
                </div>
                <div>
                    <h3 class="mb-0">@Model.TotalUsers</h3>
                    <span class="text-muted">إجمالي المستخدمين</span>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-6 col-lg-3">
        <div class="card stat-card border-0">
            <div class="card-body d-flex align-items-center">
                <div class="stat-icon bg-success bg-opacity-10 text-success me-3">
                    <i class="bi bi-person-check"></i>
                </div>
                <div>
                    <h3 class="mb-0">@Model.ActiveUsers</h3>
                    <span class="text-muted">المستخدمين النشطين</span>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-6 col-lg-3">
        <div class="card stat-card border-0">
            <div class="card-body d-flex align-items-center">
                <div class="stat-icon bg-warning bg-opacity-10 text-warning me-3">
                    <i class="bi bi-person-x"></i>
                </div>
                <div>
                    <h3 class="mb-0">@Model.InactiveUsers</h3>
                    <span class="text-muted">المستخدمين غير النشطين</span>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-6 col-lg-3">
        <div class="card stat-card border-0">
            <div class="card-body d-flex align-items-center">
                <div class="stat-icon bg-info bg-opacity-10 text-info me-3">
                    <i class="bi bi-shield-check"></i>
                </div>
                <div>
                    <h3 class="mb-0">@Model.TotalRoles</h3>
                    <span class="text-muted">الأدوار</span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <!-- Recent Users -->
    <div class="col-lg-8">
        <div class="card table-card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>أحدث المستخدمين</h5>
                <a href="@Url.Action("Index", "Users")" class="btn btn-sm btn-outline-primary">عرض الكل</a>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>المستخدم</th>
                                <th>البريد الإلكتروني</th>
                                <th>الأدوار</th>
                                <th>الحالة</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.RecentUsers.Any())
                            {
                                @foreach (var user in Model.RecentUsers)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center me-2" style="width:35px;height:35px;">
                                                    @user.FullName.FirstOrDefault()
                                                </div>
                                                <div>
                                                    <strong>@user.FullName</strong>
                                                    <br><small class="text-muted">@@@user.Username</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>@user.Email</td>
                                        <td>
                                            @foreach (var role in user.Roles.Take(2))
                                            {
                                                <span class="badge bg-secondary me-1">@role</span>
                                            }
                                            @if (user.Roles.Count > 2)
                                            {
                                                <span class="badge bg-light text-dark">+@(user.Roles.Count - 2)</span>
                                            }
                                        </td>
                                        <td>
                                            @if (user.IsActive)
                                            {
                                                <span class="badge bg-success">نشط</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">غير نشط</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center py-4 text-muted">
                                        <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                        لا يوجد مستخدمين
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Roles Overview -->
    <div class="col-lg-4">
        <div class="card table-card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-shield me-2"></i>الأدوار</h5>
                <a href="@Url.Action("Index", "Roles")" class="btn btn-sm btn-outline-primary">إدارة</a>
            </div>
            <div class="card-body">
                @if (Model.Roles.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var role in Model.Roles)
                        {
                            <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                                <div>
                                    <strong>@role.Name</strong>
                                    @if (role.IsSystemRole)
                                    {
                                        <span class="badge bg-warning ms-1">نظام</span>
                                    }
                                </div>
                                <div>
                                    <span class="badge bg-primary rounded-pill">@role.UsersCount مستخدم</span>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-4 text-muted">
                        <i class="bi bi-shield fs-1 d-block mb-2"></i>
                        لا توجد أدوار
                    </div>
                }
            </div>
        </div>
    </div>
</div>
