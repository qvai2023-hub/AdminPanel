@model UserRolesViewModel
@{
    ViewData["Title"] = "أدوار المستخدم - " + Model.FullName;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1"><i class="bi bi-person-badge me-2"></i>أدوار المستخدم</h2>
        <p class="text-muted mb-0">تعيين الأدوار للمستخدم: <strong>@Model.FullName</strong></p>
    </div>
    <div class="d-flex gap-2">
        <a href="@Url.Action("Edit", new { id = Model.UserId })" class="btn btn-outline-primary">
            <i class="bi bi-pencil me-1"></i>تعديل المستخدم
        </a>
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-right me-1"></i>رجوع للمستخدمين
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <form asp-action="AssignRoles" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="UserId" value="@Model.UserId" />

            <div class="card">
                <div class="card-header bg-light">
                    <div class="d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-shield-check me-2"></i>الأدوار المتاحة</span>
                        <div class="btn-group btn-group-sm">
                            <button type="button" class="btn btn-outline-success" onclick="selectAllRoles()">
                                <i class="bi bi-check-all me-1"></i>تحديد الكل
                            </button>
                            <button type="button" class="btn btn-outline-danger" onclick="deselectAllRoles()">
                                <i class="bi bi-x-lg me-1"></i>إلغاء الكل
                            </button>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @if (!Model.Roles.Any())
                    {
                        <div class="alert alert-warning mb-0">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            لا توجد أدوار متاحة. يرجى إنشاء أدوار أولاً.
                        </div>
                    }
                    else
                    {
                        <div class="row">
                            @foreach (var role in Model.Roles)
                            {
                                <div class="col-md-6 mb-3">
                                    <div class="card h-100 @(role.IsAssigned ? "border-success" : "")">
                                        <div class="card-body">
                                            <div class="form-check">
                                                <input type="checkbox"
                                                       class="form-check-input role-checkbox"
                                                       name="RoleIds"
                                                       value="@role.RoleId"
                                                       id="role_@role.RoleId"
                                                       @(role.IsAssigned ? "checked" : "") />
                                                <label class="form-check-label fw-bold" for="role_@role.RoleId">
                                                    <i class="bi bi-shield me-1"></i>@role.RoleName
                                                </label>
                                            </div>
                                            @if (!string.IsNullOrEmpty(role.Description))
                                            {
                                                <p class="text-muted small mb-0 mt-2">@role.Description</p>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
                @if (Model.Roles.Any())
                {
                    <div class="card-footer">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-muted small">
                                <i class="bi bi-info-circle me-1"></i>
                                حدد الأدوار التي تريد تعيينها للمستخدم
                            </span>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-1"></i>حفظ الأدوار
                            </button>
                        </div>
                    </div>
                }
            </div>
        </form>
    </div>

    <div class="col-lg-4">
        <div class="card">
            <div class="card-header bg-light">
                <i class="bi bi-person me-2"></i>معلومات المستخدم
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3" style="width:80px;height:80px;font-size:2rem;font-weight:bold;">
                        @Model.FullName.FirstOrDefault()
                    </div>
                </div>
                <table class="table table-sm mb-0">
                    <tr>
                        <th class="border-0 text-muted" style="width: 100px;">الاسم:</th>
                        <td class="border-0"><strong>@Model.FullName</strong></td>
                    </tr>
                    <tr>
                        <th class="text-muted">المستخدم:</th>
                        <td>@@@Model.Username</td>
                    </tr>
                    <tr>
                        <th class="text-muted">البريد:</th>
                        <td>@Model.Email</td>
                    </tr>
                    <tr>
                        <th class="text-muted">الأدوار:</th>
                        <td>
                            @{
                                var assignedRoles = Model.Roles.Where(r => r.IsAssigned).ToList();
                            }
                            @if (assignedRoles.Any())
                            {
                                foreach (var r in assignedRoles)
                                {
                                    <span class="badge bg-success me-1">@r.RoleName</span>
                                }
                            }
                            else
                            {
                                <span class="text-muted">لا يوجد</span>
                            }
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function selectAllRoles() {
            document.querySelectorAll('.role-checkbox').forEach(cb => {
                cb.checked = true;
                updateCardBorder(cb);
            });
        }

        function deselectAllRoles() {
            document.querySelectorAll('.role-checkbox').forEach(cb => {
                cb.checked = false;
                updateCardBorder(cb);
            });
        }

        function updateCardBorder(checkbox) {
            const card = checkbox.closest('.card');
            if (checkbox.checked) {
                card.classList.add('border-success');
            } else {
                card.classList.remove('border-success');
            }
        }

        // Update card borders on checkbox change
        document.querySelectorAll('.role-checkbox').forEach(cb => {
            cb.addEventListener('change', function() {
                updateCardBorder(this);
            });
        });
    </script>
}
