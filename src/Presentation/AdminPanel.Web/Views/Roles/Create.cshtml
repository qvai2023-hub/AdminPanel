@model CreateRoleViewModel
@{
    ViewData["Title"] = "إضافة دور جديد";
}

<div class="mb-4">
    <h2 class="mb-1"><i class="bi bi-shield-plus me-2"></i>إضافة دور جديد</h2>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">الرئيسية</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index")">الأدوار</a></li>
            <li class="breadcrumb-item active">إضافة دور</li>
        </ol>
    </nav>
</div>

<div class="card table-card">
    <div class="card-body">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="أدخل اسم الدور" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                
                <div class="col-md-6 mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <input asp-for="Description" class="form-control" placeholder="وصف الدور (اختياري)" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            
            <div class="mb-4">
                <label class="form-label fw-bold">الصلاحيات</label>
                <hr />
                @foreach (var group in Model.PermissionGroups)
                {
                    <div class="mb-4">
                        <h6 class="text-primary mb-3">
                            <i class="bi bi-folder me-2"></i>@group.ModuleDisplayName
                        </h6>
                        <div class="row">
                            @foreach (var permission in group.Permissions)
                            {
                                <div class="col-md-4 col-lg-3">
                                    <div class="form-check">
                                        <input type="checkbox" name="SelectedPermissionIds" value="@permission.Id" 
                                               class="form-check-input" id="perm_@permission.Id" />
                                        <label class="form-check-label" for="perm_@permission.Id">
                                            @(permission.DisplayNameAr ?? permission.Code)
                                        </label>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
            
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle me-1"></i>حفظ
                </button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="bi bi-x-circle me-1"></i>إلغاء
                </a>
            </div>
        </form>
    </div>
</div>
