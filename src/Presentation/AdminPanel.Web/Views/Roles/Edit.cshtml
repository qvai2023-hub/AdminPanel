@model EditRoleViewModel
@{
    ViewData["Title"] = "تعديل الدور";
}

<div class="mb-4">
    <h2 class="mb-1"><i class="bi bi-shield-gear me-2"></i>تعديل الدور</h2>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">الرئيسية</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index")">الأدوار</a></li>
            <li class="breadcrumb-item active">تعديل: @Model.Name</li>
        </ol>
    </nav>
</div>

@if (Model.IsSystemRole)
{
    <div class="alert alert-warning">
        <i class="bi bi-exclamation-triangle me-2"></i>
        <strong>تنبيه:</strong> هذا دور نظام ولا يمكن تعديله.
    </div>
}

<div class="card table-card">
    <div class="card-body">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="IsSystemRole" />
            
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    @if (Model.IsSystemRole)
                    {
                        <input asp-for="Name" class="form-control" readonly disabled />
                    }
                    else
                    {
                        <input asp-for="Name" class="form-control" />
                    }
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    @if (Model.IsSystemRole)
                    {
                        <input asp-for="Description" class="form-control" readonly disabled />
                    }
                    else
                    {
                        <input asp-for="Description" class="form-control" />
                    }
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            
            <div class="d-flex gap-2">
                @if (!Model.IsSystemRole)
                {
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle me-1"></i>حفظ التغييرات
                    </button>
                }
                <a href="@Url.Action("Permissions", new { id = Model.Id })" class="btn btn-info">
                    <i class="bi bi-key me-1"></i>إدارة الصلاحيات
                </a>
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="bi bi-x-circle me-1"></i>رجوع
                </a>
            </div>
        </form>
    </div>
</div>
