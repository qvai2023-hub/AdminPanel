@model RolePermissionsViewModel
@{
    ViewData["Title"] = "صلاحيات الدور";
}

<div class="mb-4">
    <h2 class="mb-1"><i class="bi bi-key me-2"></i>صلاحيات الدور: @Model.RoleName</h2>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">الرئيسية</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index")">الأدوار</a></li>
            <li class="breadcrumb-item active">صلاحيات: @Model.RoleName</li>
        </ol>
    </nav>
</div>

<div class="card table-card">
    <div class="card-body">
        <form asp-action="Permissions" asp-route-id="@Model.RoleId" method="post">
            @Html.AntiForgeryToken()
            
            <div class="mb-3">
                <div class="d-flex gap-2 mb-3">
                    <button type="button" class="btn btn-sm btn-outline-primary" onclick="selectAll()">
                        <i class="bi bi-check-all me-1"></i>تحديد الكل
                    </button>
                    <button type="button" class="btn btn-sm btn-outline-secondary" onclick="deselectAll()">
                        <i class="bi bi-x-lg me-1"></i>إلغاء الكل
                    </button>
                </div>
            </div>
            
            @foreach (var group in Model.PermissionGroups)
            {
                <div class="card mb-3">
                    <div class="card-header bg-light">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input module-check" 
                                   id="module_@group.Module" data-module="@group.Module"
                                   onchange="toggleModule('@group.Module')" />
                            <label class="form-check-label fw-bold" for="module_@group.Module">
                                <i class="bi bi-folder me-2"></i>@group.ModuleDisplayName
                            </label>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @foreach (var permission in group.Permissions)
                            {
                                <div class="col-md-4 col-lg-3 mb-2">
                                    <div class="form-check">
                                        <input type="checkbox" name="permissionIds" value="@permission.Id" 
                                               class="form-check-input permission-check" 
                                               data-module="@group.Module"
                                               id="perm_@permission.Id"
                                               @(Model.GrantedPermissionIds.Contains(permission.Id) ? "checked" : "") />
                                        <label class="form-check-label" for="perm_@permission.Id">
                                            @(permission.DisplayNameAr ?? permission.Code)
                                        </label>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
            
            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle me-1"></i>حفظ الصلاحيات
                </button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="bi bi-x-circle me-1"></i>رجوع
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        // Update module checkbox state on load
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.module-check').forEach(function(moduleCheck) {
                updateModuleState(moduleCheck.dataset.module);
            });
        });
        
        function toggleModule(module) {
            var moduleCheck = document.getElementById('module_' + module);
            var permissions = document.querySelectorAll('.permission-check[data-module="' + module + '"]');
            permissions.forEach(function(perm) {
                perm.checked = moduleCheck.checked;
            });
        }
        
        function updateModuleState(module) {
            var moduleCheck = document.getElementById('module_' + module);
            var permissions = document.querySelectorAll('.permission-check[data-module="' + module + '"]');
            var allChecked = Array.from(permissions).every(p => p.checked);
            var someChecked = Array.from(permissions).some(p => p.checked);
            moduleCheck.checked = allChecked;
            moduleCheck.indeterminate = someChecked && !allChecked;
        }
        
        document.querySelectorAll('.permission-check').forEach(function(check) {
            check.addEventListener('change', function() {
                updateModuleState(this.dataset.module);
            });
        });
        
        function selectAll() {
            document.querySelectorAll('.permission-check, .module-check').forEach(function(check) {
                check.checked = true;
            });
        }
        
        function deselectAll() {
            document.querySelectorAll('.permission-check, .module-check').forEach(function(check) {
                check.checked = false;
                check.indeterminate = false;
            });
        }
    </script>
}
